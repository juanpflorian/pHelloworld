@{
    ViewData["Title"] = "Página Principal";
    
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <section class="image-section">
        <img src="~/img/home/paris.jpg" alt="">
        <img src="img/home/proyecto.jpg" alt="">
        <img src="img/home/torres.jpg" alt="">
        <img src="img/home/catedral.jpg" alt="">
        <img src="img/home/about.jpg" alt="">
    </section>
    <main class="main">
        <div class="main-text">
            <h1>Viaja, Descubre, y vive una experiencia inolvidable.</h1>
            <p>¡Encuentra un guía ahora!</p>
        </div>
    </main>


    <section class="sugerencias">

        <div class="cards-container">
            <div class="card">
                <div class="text">
                    <h3>Tour Exprés</h3>
                    <p>Descubre la ciudad en poco tiempo con nuestros recorridos rápidos y personalizados.</p>
                    <button>Detalles</button>
                </div>
                <img src="img/home/flash.png" alt="Entrega rápida">
            </div>
            <div class="card">
                <div class="text">
                    <h3>Reserva</h3>
                    <p>Reserva tu viaje con anticipación y asegura la mejor experiencia con nuestros guías certificados.</p>
                    <button>Detalles</button>
                </div>
                <img src="img/home/reserve.png" alt="Reserva anticipada">
            </div>
            <div class="card">
                <div class="text">
                    <h3>Explora</h3>
                    <p>Aventúrate a los rincones más fascinantes con la ayuda de expertos.</p>
                    <button>Detalles</button>
                </div>
                <img src="img/home/viaje.png" alt="Explorar">
            </div>
        </div>
    </section>

</body>
</html>
